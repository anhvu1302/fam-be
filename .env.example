# ============================================
# FAM Backend Environment Configuration
# ============================================
# This file contains SENSITIVE and ENVIRONMENT-SPECIFIC settings.
# Non-sensitive settings (pagination, file upload limits, etc.) are in appsettings.json
#
# Copy this file to .env and update with your values.
# DO NOT commit .env file to git!
# ============================================

# ------- Environment -------
ASPNETCORE_ENVIRONMENT=Development

# ------- Database Configuration (Required) -------
# Provider: PostgreSQL or MongoDB
DB_PROVIDER=PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fam_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# ------- JWT Authentication (Required - Sensitive) -------
# Generate a secure secret: openssl rand -hex 32
# Secret must be at least 32 characters
JWT_SECRET=your_jwt_secret_at_least_32_characters_long
JWT_ISSUER=FAM.API
JWT_AUDIENCE=FAM.Client
ACCESS_TOKEN_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=30
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# ------- MinIO Storage (Required - Sensitive) -------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=fam-assets
