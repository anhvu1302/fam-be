# ============================================
# FAM Backend Environment Configuration
# ============================================
# This file contains SENSITIVE and ENVIRONMENT-SPECIFIC settings.
# Non-sensitive settings (pagination, file upload limits, etc.) are in appsettings.json
#
# Copy this file to .env and update with your values.
# DO NOT commit .env file to git!
# ============================================

# ------- Environment -------
ASPNETCORE_ENVIRONMENT=Development

# ------- Database Configuration (Required) -------
# Provider: PostgreSQL or MongoDB
DB_PROVIDER=PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fam_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# ------- JWT Authentication (Required) -------
# Keys are managed in database via SigningKey table
# Access JWKS at: /.well-known/jwks.json or /api/auth/jwks
JWT_ISSUER=FAM.API
JWT_AUDIENCE=FAM.Client
ACCESS_TOKEN_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=30
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# ------- MinIO Storage (Required - Sensitive) -------
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your_password_here
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=fam-assets
MINIO_CONSOLE_PORT=9001

# ------- Seq Logging (Optional) -------
SEQ_PORT=5341
SEQ_UI_PORT=9002
SEQ_ADMIN_PASSWORD=Admin@123

# ------- Redis Configuration (Optional) -------
# For OTP caching and distributed cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_INSTANCE_NAME=fam:

# ------- Email/SMTP Configuration (Optional) -------
# For sending authentication emails (OTP, password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_ENABLE_SSL=true
EMAIL_FROM=noreply@fam.com
EMAIL_FROM_NAME=FAM System

# ------- CORS Configuration -------
CORS_ALLOWED_ORIGINS=http://localhost:3000;http://localhost:8001
CORS_ALLOWED_METHODS=GET;POST;PUT;PATCH;DELETE;OPTIONS
CORS_ALLOWED_HEADERS=Content-Type;Authorization;X-Requested-With
CORS_ALLOW_CREDENTIALS=true
