# ============================================
# FAM Backend Environment Configuration
# ============================================
# This file contains SENSITIVE and ENVIRONMENT-SPECIFIC settings only.
# Non-sensitive settings are in appsettings.json
# DO NOT commit this file to git!

# ------- Environment -------
ASPNETCORE_ENVIRONMENT=Development

# ------- Database Configuration (Required) -------
# Provider: PostgreSQL or MongoDB
DB_PROVIDER=PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fam_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# ------- JWT Authentication (Required - Sensitive) -------
JWT_ISSUER=FAM.API
JWT_AUDIENCE=FAM.Client
ACCESS_TOKEN_EXPIRATION_MINUTES=15
REFRESH_TOKEN_EXPIRATION_DAYS=30
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# ------- MinIO Storage (Required - Sensitive) -------
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your_password_here
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=fam-assets
MINIO_CONSOLE_PORT=9001

# ------- Seq Logging -------
SEQ_PORT=5341
SEQ_UI_PORT=9002
SEQ_ADMIN_PASSWORD=your_password_here

# ------- Cache Configuration -------
# Provider: Redis or InMemory (InMemory for development/testing only)
CACHE_PROVIDER=Redis

# Redis Configuration (Required if CACHE_PROVIDER=Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ------- Email Configuration (Required - Sensitive) -------
EMAIL_PROVIDER=Smtp
EMAIL_FROM=noreply@fam.codes
EMAIL_FROM_NAME=FAM System

# Brevo API Key (alternative to SMTP)
BREVO_API_KEY=MCBEb2zD3p1IQ6tA

# SMTP Fallback (for development or legacy systems)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_ENABLE_SSL=true

# ------- Application URLs -------
# Backend API base URL (for callbacks, webhooks, public file URLs, etc.)
# Development: http://localhost:8000 (with port)
# Production: https://api.fam.yourdomain.com (no port, uses default 443)
BACKEND_URL=http://localhost:8000

# Frontend base URL (for email links like reset password, verify email, etc.)
# Development: Use http://localhost with port 8001 below  
# Production: Use full URL like https://fam.yourdomain.com (port 443 default)
FRONTEND_URL=http://localhost
FRONTEND_PORT=8001
