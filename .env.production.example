# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=fam_db
DB_PORT=5432

# MinIO Configuration
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your_secure_password_here
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=fam-assets
MINIO_CONSOLE_PORT=9001

# Seq Configuration
SEQ_ADMIN_PASSWORD=your_secure_password_here
SEQ_PORT=5341
SEQ_UI_PORT=9002
SEQ_API_KEY=

# JWT Configuration
JWT_ISSUER=FAM.WebApi
JWT_AUDIENCE=FAM.Client
JWT_EXPIRY=60

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_INSTANCE_NAME=fam:

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://fam.codes;http://localhost:8001
CORS_ALLOWED_METHODS=GET;POST;PUT;PATCH;DELETE;OPTIONS
CORS_ALLOWED_HEADERS=Content-Type;Authorization;X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# API Configuration
API_PORT=8000

# ------- Application URLs -------
# Backend API base URL (for callbacks, webhooks, public file URLs, etc.)
# Production: No port needed, uses default HTTPS port 443
BACKEND_URL=https://api.fam.codes

# Frontend base URL (for email links like reset password, verify email, etc.)
# Production: No port needed, uses default HTTPS port 443
FRONTEND_URL=https://fam.codes
