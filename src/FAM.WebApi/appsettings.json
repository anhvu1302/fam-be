{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "Fatal",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "LuckyPennySoftware.AutoMapper.License": "Fatal",
        "LuckyPennySoftware.MediatR.License": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {SourceContext}{NewLine}      {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/fam-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8000"
      }
    }
  },
  "Pagination": {
    "DefaultPage": 1,
    "DefaultPageSize": 10,
    "MaxPageSize": 100
  },
  "FileUpload": {
    "MaxImageSizeMb": 10,
    "MaxMediaSizeMb": 100,
    "MaxDocumentSizeMb": 20,
    "AllowedImageExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".webp",
      ".bmp"
    ],
    "AllowedMediaExtensions": [
      ".mp4",
      ".avi",
      ".mov",
      ".wmv",
      ".flv",
      ".mkv",
      ".webm",
      ".mp3",
      ".wav",
      ".ogg",
      ".m4a"
    ],
    "AllowedDocumentExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".ppt",
      ".pptx",
      ".txt",
      ".csv"
    ],
    "MultipartChunkSizeMb": 20,
    "MultipartMaxParts": 10000
  },
  "RealIpDetection": {
    "TrustedProxies": [
      "127.0.0.1",
      "::1"
    ],
    "HeaderPriority": [
      "CF-Connecting-IP",
      "True-Client-IP",
      "X-Real-IP",
      "X-Forwarded-For",
      "X-Client-IP"
    ],
    "LogIpDetection": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:8001"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "PATCH",
      "DELETE",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With"
    ],
    "AllowCredentials": true
  },
  "Email": {
    "Provider": "Smtp",
    "FromEmail": "noreply@fam.local",
    "FromName": "FAM System",
    "Brevo": {
      "BaseUrl": "https://api.brevo.com/v3",
      "TimeoutSeconds": 30
    },
    "Smtp": {
      "Port": 587,
      "EnableSsl": true
    }
  },
  "Frontend": {
    "ResetPasswordPath": "/reset-password",
    "VerifyEmailPath": "/verify-email",
    "LoginPath": "/login",
    "PasswordResetTokenExpiryMinutes": 15
  }
}
